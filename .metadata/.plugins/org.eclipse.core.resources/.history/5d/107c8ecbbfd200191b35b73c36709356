#include "Board.h"

Board makeBlankBoard() {
	int board[ROWS][COLS];
	int x;
	int y;
	Board Board = { board, x, y };
	Board.x = COLS / 2;
	Board.y = ROWS / 2;
	for (int i = 0; i < ROWS; i++) {
		for (int j = 0; j < COLS; j++) {
			Board.array[i][j] = 0;
		}
	}
	return Board;
}

