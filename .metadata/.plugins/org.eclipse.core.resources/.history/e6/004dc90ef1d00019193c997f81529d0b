bool compoundTest(){
	Matrix matrix = makeBlankMatrix(ROWS, COLS);
		matrix = horizontal(matrix, 7);
		matrix = vertical(matrix, 2);
		matrix = horizontal(matrix, -3);
		printMatrix(matrix);
		fflush(stdin);
		printf("Does the Board look Correct? (y or other letter): ");
		fflush(stdout);
		char a = getchar();
		bool ans = false;
		if (a == 'y') {
			ans = true;
		}
		return ans;
}
