#ifndef PRODUCTION_H_
#define PRODUCTION_H_
#include <stdio.h>
#include <stdbool.h>

typedef struct{
	int x;
	int y;
} Location;

typedef struct{
	int nRow;
	int nCol;
	int array[nRow][nCol];
	Location point;
} Matrix;

bool tests();

Matrix makeBlankMatrix(int nRow, int nCol);

void printArray(int *array, int nRow, int nCol);

bool production(int argc, char* argv[]);

#endif /* PRODUCTION_H_ */
